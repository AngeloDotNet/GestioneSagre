{
    "Kestrel": {
        "Limits": {
            "MaxRequestBodySize": 5242880
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Warning"
        }
    },
    "ConnectionStrings": {
        "Default": "Data Source=NOME-SERVER\\NOME-ISTANZA;Initial Catalog=NOME-DATABASE;User ID=USERNAME;Password=PASSWORD"
    },
    "Database": {
        "maxRetryCount": 10,
        "maxRetryDelay": 30
    },
    "Swagger": {
        "enabled": true
    },
    "Smtp": {
        "Host": "smtp.example.org",
        "Port": 25,
        "Security": "StartTls",
        "Username": "Username del server SMTP",
        "Password": "Password del server SMTP",
        "Sender": "Noreply <noreply@example.org>",
        "Support": "Noreply <noreply@example.org>"
    }
}